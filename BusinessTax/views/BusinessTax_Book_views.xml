<?xml version="1.0"?>
<odoo>

       <record model="ir.ui.view" id="businesstax_book_form_view">
            <field name="name">businesstax.book_view.form</field>
            <field name="model">businesstax.book</field>
            <field name="arch" type="xml">
                <form string="businesstax book Form">
                   <sheet string="發票本" modifiers="{}">
                        <div class="oe_title" modifiers="{}"/>
                        <group  modifiers="{}">
                            <group name="left" string="發票本基本資料" modifiers="{}">
                                <field name="name" modifiers="{}"/>
                                <field name="vat_name" on_change="1" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="vat_code" modifiers="{}"/>
                                <field name="method" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="year" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="period_start" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="period_end" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="certificate_category" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="vat_declare_code" can_create="true" can_write="true" modifiers="{}"/>
                            </group>
                            <group name="right" string="發票號碼資料" modifiers="{}">
                                <field name="profix" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="invoice_begin" modifiers="{}"/>
                                <field name="invoice_end" modifiers="{}"/>
                                <field name="profix_type" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="invoice_next" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="invoice_now" modifiers="{}"/>
                                <field name="invoice_lastdate" modifiers="{}"/>
                                <field name="status" can_create="true" can_write="true" modifiers="{}"/>
                            </group>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="activity_ids" widget="mail_activity"/>
	                    <field name="message_ids" widget="mail_thread"/>
                	</div>

                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="Businesstax_book_view">
            <field name="name">businesstax_book_view.search</field>
            <field name="model">businesstax.book</field>
            <field name="arch" type="xml">
                <tree string="businesstax book">
                   	   <field name="name"  />
                </tree>
            </field>
        </record>
        
       
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="sinv_book_action">
            <field name="name">sinvbook</field>
            <field name="res_model">businesstax.book</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
             <field name="view_id" ref="Businesstax_book_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the year Data
                </p>
            </field>
        </record>

         <menuitem id="sinv_book_menu" name="sinvbook" parent="businesstax_sinv_menu"
                  action="sinv_book_action"/>
        <!-- Full id location:
             action="openacademy.course_list_action"
             It is not required when it is the same module -->
    <!-- top level menu: no parent -->

</odoo>

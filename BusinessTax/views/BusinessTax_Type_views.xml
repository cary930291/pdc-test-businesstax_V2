<?xml version="1.0"?>
<odoo>

       <record model="ir.ui.view" id="businesstax_type_form_view">
            <field name="name">businesstax.type_view.form</field>
            <field name="model">businesstax.type</field>
            <field name="arch" type="xml">
                <form string="businesstax type Form">
                    <sheet>
                        <group>

                                <field name="name" />
                        </group>
                        <!-- <notebook>
                        <page string="Journal Items">

                        </page>
	               		</notebook> -->
                    </sheet>
                     <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="activity_ids" widget="mail_activity"/>
	                    <field name="message_ids" widget="mail_thread"/>
                	</div>

                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="businesstax_type_view">
            <field name="name">businesstax_type_view.search</field>
            <field name="model">businesstax.type</field>
            <field name="arch" type="xml">
                <tree string="businesstax type">
                   	   <field name="name"  />
                </tree>
            </field>
        </record>
        
       
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="config_type_action">
            <field name="name">configtype</field>
            <field name="res_model">businesstax.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
             <field name="view_id" ref="businesstax_type_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the type Data
                </p>
            </field>
        </record>

         <menuitem id="Config_type_menu" name="configtype" parent="businesstax_config_menu"
                  action="config_type_action"/>
        <!-- Full id location:
             action="openacademy.course_list_action"
             It is not required when it is the same module -->
    <!-- top level menu: no parent -->

</odoo>

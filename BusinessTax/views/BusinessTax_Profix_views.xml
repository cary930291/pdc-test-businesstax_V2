<?xml version="1.0"?>
<odoo>

       <record model="ir.ui.view" id="businesstax_profix_form_view">
            <field name="name">businesstax.profix_view.form</field>
            <field name="model">businesstax.profix</field>
            <field name="arch" type="xml">
                <form string="businesstax profix Form">
                    <sheet string="發票字軌" modifiers="{}">
                        <div class="oe_title" modifiers="{}"/>
                        <group>
                            <group name="left" modifiers="{}">
                                <field name="name" modifiers="{'required':true}"/>
                                <field name="profix_type" can_create="true" can_write="true" modifiers="{}"/>
                            </group>
                            <group name="right" modifiers="{}">
                                <field name="year" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="period_start" can_create="true" can_write="true" modifiers="{}"/>
                                <field name="period_end" can_create="true" can_write="true" modifiers="{}"/>
                            </group>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="activity_ids" widget="mail_activity"/>
	                    <field name="message_ids" widget="mail_thread"/>
                	</div>

                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="businesstax_profix_view">
            <field name="name">businesstax_profix_view.search</field>
            <field name="model">businesstax.profix</field>
            <field name="arch" type="xml">
                <tree string="businesstax profix">
                   	   <field name="name"  />
                </tree>
            </field>
        </record>
        
       
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="basic_profix_action">
            <field name="name">Basicprofix</field>
            <field name="res_model">businesstax.profix</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
             <field name="view_id" ref="businesstax_profix_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the profix Data
                </p>
            </field>
        </record>

         <menuitem id="Basic_profix_menu" name="Basicprofix" parent="businesstax_basic_menu"
                  action="basic_profix_action"/>
        <!-- Full id location:
             action="openacademy.course_list_action"
             It is not required when it is the same module -->
    <!-- top level menu: no parent -->

</odoo>

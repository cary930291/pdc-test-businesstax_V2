        <record id="linkloving_view_expenses_tree" model="ir.ui.view">
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">单号</attribute>
                </xpath>

                <xpath expr="//field[@name='name']" position="after">
                    <field name="full_description" string="消费用途" widget="set_td_width" td_width="20"/>
                    <field name="create_date" widget="date"/>
                </xpath>

            </field>
        </record>


        <record id="view_hr_expense_sheet_tree_no_create" model="ir.ui.view">
            <field name="name">hr.expense.sheet.tree</field>
            <field name="model">hr.expense.sheet</field>
            <field name="arch" type="xml">
                <tree string="Expense Reports" decoration-warning="state=='draft'"
                      decoration-bf="message_unread == True" create="false">
                    <field name="name" string="单号"/>
                    <field name="full_description" widget="set_td_width" td_width="20"/>
                    <field name="product_id" string="产品"/>
                    <field name="create_date" widget="date"/>
                    <field name="accounting_date"/>
                    <field name="employee_id"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="total_amount" sum="Total Amount"/>
                    <field name="state"/>
                    <field name="message_unread" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="hr_expense.hr_expense_form_view" model="ir.ui.view">
            <field name="name">hr.expense.form</field>
            <field name="model">hr.expense</field>
            <field eval="25" name="priority"/>
            <field name="arch" type="xml">
                <form string="Expenses">
                    <header>
                        <button name="submit_expenses" states="draft" string="Submit to Manager" type="object"
                                class="oe_highlight o_expense_submit"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,reported,done"/>
                        <button name="view_sheet" type="object" string="View Report" class="oe_highlight"
                                attrs="{'invisible': [('state', '=','draft')]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button name="action_get_attachment_view"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Documents"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Lunch with Customer"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id" context="{'default_can_be_expensed': 1}" attrs="{}"/>
                                <field name="unit_amount" required="1" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <label for="quantity"/>
                                <div>
                                    <field name="quantity" class="oe_inline"/>
                                    <field name="product_uom_id" widget="selection" class="oe_inline"
                                           groups="product.group_uom"/>
                                </div>
                                <field name="tax_ids" domain="[('type_tax_use', '=', 'purchase')]"
                                       widget="many2many_tags" groups="base.group_no_one"/>
                            </group>
                            <group>
                                <field name="reference"/>
                                <field name="date"/>
                                <field name="account_id"/>
                                <field name="employee_id"/>
                                <field name="sheet_id" invisible="1"/>
                                <field name="currency_id" groups="base.group_multi_currency"/>
                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="total_amount" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"/>
                                <label for="payment_mode"/>
                                <div>
                                    <field name="payment_mode" widget="radio"/>
                                </div>
                            </group>

                        </group>
                        <div>
                            <field name="description" placeholder="Notes..."/>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_expense_sheet_filter_inherit" model="ir.ui.view">
            <field name="name">hr.expense.sheet</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_filter"/>
            <field name="arch" type="xml">
                <filter name="approved" position="replace">
                    <filter domain="[('state', '=', 'post')]" string="待过账" name="approved"
                            help="Expenses to Invoice"/>
                </filter>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">单号</attribute>
                </xpath>


                <field name="name" position="after">
                    <field name="full_description"/>
                    <field name="total_amount" filter_domain="[('total_amount','ilike',self)]" string="报销金额"/>
                    <field name="product_id" string="费用类别"/>
                    <field name="account_id" string="科目"/>
                </field>
            </field>
        </record>


        <record id="action_hr_expense_to_submit" model="ir.actions.act_window">
            <field name="name">待提交报销单</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="domain">[('employee_id.user_id', '=', uid),('state','in',('draft','rejected'))]</field>
            <!--<field name="view_ids" eval="[(5, 0, 0),-->
            <!--(0, 0, {'view_mode': 'tree', 'view_id': ref('hr_expense.view_hr_expense_sheet_tree')}),-->
            <!--(0, 0, {'view_mode': 'form', 'view_id': ref('hr_expense.view_hr_expense_sheet_form')})]"/>-->
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_hr_expense_submitted" model="ir.actions.act_window">
            <field name="name">已提交报销单</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="context">{'approve_type':'submitted'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('rt_hr_expense.view_hr_expense_sheet_tree_no_create')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hr_expense.view_hr_expense_sheet_form')})]"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_hr_expense_to_approve" model="ir.actions.act_window">
            <field name="name">待审核报销单</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="context">{'approve_type':'to_approve'}</field>
            <field name="domain">[('rt_to_approval_department_id.manager_id.user_id','=',uid)]</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('rt_hr_expense.view_hr_expense_sheet_tree_no_create')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hr_expense.view_hr_expense_sheet_form')})]"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_hr_expense_my_approved" model="ir.actions.act_window">
            <field name="name">已审核报销单</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="context">{'approve_type':'approved'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('rt_hr_expense.view_hr_expense_sheet_tree_no_create')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hr_expense.view_hr_expense_sheet_form')})]"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="待提交" id="menu_hr_expense_to_submit" parent="hr_expense.menu_hr_expense_my_expenses" sequence="1"
                  action="action_hr_expense_to_submit"/>
        <menuitem name="已提交" id="menu_hr_expense_submitted" parent="hr_expense.menu_hr_expense_my_expenses" sequence="2"
                  action="action_hr_expense_submitted"/>
        <menuitem name="待审核" id="menu_hr_expense_to_approve" parent="hr_expense.menu_hr_expense_my_expenses"
                  sequence="3"
                  action="action_hr_expense_to_approve"/>
        <menuitem name="已审核" id="menu_hr_expense_approve_my_approved" parent="hr_expense.menu_hr_expense_my_expenses"
                  sequence="4"
                  action="action_hr_expense_my_approved"/>


        <menuitem
                id="menu_hr_expense_root"
                name="费用"
                parent="account.menu_finance"
                sequence="5"/>


        <record id="action_hr_expense_expense_to_journal" model="ir.actions.act_window">
            <field name="name">待付款报销</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="domain">[('state','not in',('draft','rejected','cancel','salary'))]</field>
            <field name="context">{'search_default_to_post': 1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('rt_hr_expense.view_hr_expense_sheet_tree_no_create')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('hr_expense.view_hr_expense_sheet_form')})]"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_hr_expense_sheet_to_journal"
                name="待付款报销"
                action="action_hr_expense_expense_to_journal"
                parent="menu_hr_expense_root"
                sequence="6"/>


        <menuitem id="menu_excel_report" name="自定义Excel报告" parent="account.menu_finance_reports"
                  groups="account.group_account_user"/>


        <menuitem id="menu_expense_sheet_report" name="报销费用报告" parent="menu_excel_report"
                  action="action_hr_expense_sheet_wizard" groups="account.group_account_user"/>


        <record id="hr_expense_product_tree" model="ir.ui.view">
            <field name="name">product.product.expense</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>

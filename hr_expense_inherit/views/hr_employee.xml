<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_employee_inherit_for_hr_expense" model="ir.ui.view">
            <field name="name">hr_employee_inherit_for_attendance</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="rt_hr.employee_form"/>
            <field name="arch" type="xml">


                <div name="button_box" position="inside">
                    <button type="object"
                            class="oe_stat_button"
                            icon="fa-tasks"
                            name="view_hr_expense_sheet">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="sheet_count"/>
                            </span>
                            <span class="o_stat_text">报销单</span>
                        </div>
                    </button>
                         <button type="object"
                            class="oe_stat_button"
                            icon="fa-tasks"
                            name="view_temp_advance_payment">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="temp_payment_count"/>
                            </span>
                            <span class="o_stat_text">借款单</span>
                        </div>
                    </button>
                         <button type="object"
                            class="oe_stat_button"
                            icon="fa-tasks"

                            name="view_advance_advance_payment">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="advance_payment_count"/>
                            </span>
                            <span class="o_stat_text">预支单</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>

    </data>
</openerp>